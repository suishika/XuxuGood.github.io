// hexo next主题下，自动更换背景图片 began
// 图片来源https://source.unsplash.com/
body {
  background: url(/images/bg-2.webp);
  background-size: cover;
  background-repeat: no-repeat;
  background-attachment: fixed;
}

// hexo next主题下，自动更换背景图片 end
.sidebar {
  box-shadow: none
  background: none
}

// 回到顶部样式调整
.moon-menu-item {
  left: 0.7rem !important;
}

.header-inner {
  background: rgba(255, 255, 255, 0.95);
}

.posts-expand {
  margin-bottom: 50px;
  padding: 25px;
  -webkit-box-shadow: 0 0 14px rgba(202, 203, 203, 0.5);
  -moz-box-shadow: 0 0 14px rgba(202, 203, 204, 0.5);
}

.post-block {
  border-radius: 10px 10px 10px 10px;
}

.content-wrap {
  opacity: 0.95;
}

.posts-expand .post-title:hover {
  border-left: #7db9de 20px solid;
  padding-left: 15px;
  cursor: pointer;
  transition: border-width 0.3s linear 0.1s, color 0.2s linear 0.3s;
}

.links-of-blogroll-title {
  font-size: 16px;
}

.links-of-blogroll-list a {
  color: #5073b8;
  font-weight: bold;
}

.links-of-blogroll-list a:hover {
  color: #a166ab;
  font-weight: bold;
  border-bottom: 1px solid #a166ab;
}

a {
  border-bottom: none;
}

#myheartbeat {
  animation: iconAnimate 1.33s ease-in-out infinite;
  color: #f50404;
}

.jingping {
  background: #00a8c3;
  padding: 2px 4px 2px 4px;
  color: #fff;
}

.footer {
  color: #fff;
}

/*valine 评论系统样式 began ------------------> */

.v .vwrap {
  border: 2px solid #000 !important;
}

.v .vbtn {
  background-color: #971212 !important;
  color: #fff !important;
}

.v .vlist .vcard .vh .vmeta .vat {
  background-color: #177714 !important;
  color: #fff !important;
  border-radius: 3px !important;
  padding-left: 10px !important;
  padding-right: 10px !important;
}

.v .vlist .vcard .vimg {
  margin: 0 12px 0 0;
  counter-increment: avater;
}

.v .vlist .vcard .vimg:hover {
  -webkit-transform: rotate(360deg);
  -moz-transform: rotate(360deg);
  -ms-transform: rotate(360deg);
  -transform: rotate(360deg);
}

.v .vlist .vcard {
  border: 1px solid #ccc !important;
  padding-left: 14px !important;
  padding-right: 14px !important;
  margin-bottom: 20px !important;
  border-radius: 10px !important;
}

.v .vlist .vquote .vcard {
  border: 0 !important;
  margin-bottom: 0 !important;
  border-radius: 0 !important;
  padding: 0 !important;
}

/*valine 评论系统样式 end  ------------------> */

/*右上角实现红色的fork me on github*/
.github-corner > svg {
  fill: #70b7fd;
  color: #fff;
  position: absolute;
  top: 0;
  border: 0;
  right: 0;
}

code {
  color: #c7254e;
  background: #f9f2f4;
}

.posts-expand .post-meta .post-description {
  display none
}

.posts-expand .post-title {
  word-break: break-all;
}

article .post-body {
  margin-top: -40px;
}

.post-body {
  word-break: break-all;
  +mobile() {
    word-break: break-all;
  }
}

//本文阅读结束
.read-over {
  text-align: center;
  margin-top: 20px;
  color: #ea103d91;
  font-size: 18px;
}

/*优化sidebar滚动条样式*/
.post-toc-wrap::-webkit-scrollbar { /*滚动条整体样式*/
  width: 4px; /*高宽分别对应横竖滚动条的尺寸*/
  height: 4px;
  overflow-x: hidden; /*x轴禁止滚动*/
}

.post-toc-wrap::-webkit-scrollbar-thumb { /*滚动条里面小方块*/
  border-radius: 5px;
  -webkit-box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.2);
  background: rgba(0, 0, 0, 0.2);
}

.post-toc-wrap::-webkit-scrollbar-track { /*滚动条里面轨道*/
  -webkit-box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.2);
  border-radius: 0;
  background: rgba(0, 0, 0, 0.1);
}

.site-overview-wrap::-webkit-scrollbar { /*滚动条整体样式*/
  width: 4px; /*高宽分别对应横竖滚动条的尺寸*/
  height: 4px;
  overflow-x: hidden; /*x轴禁止滚动*/
}

.site-overview-wrap::-webkit-scrollbar-thumb { /*滚动条里面小方块*/
  border-radius: 5px;
  -webkit-box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.2);
  background: rgba(0, 0, 0, 0.2);
}

.site-overview-wrap::-webkit-scrollbar-track { /*滚动条里面轨道*/
  -webkit-box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.2);
  border-radius: 0;
  background: rgba(0, 0, 0, 0.1);
}

/*文章底部标签样式*/
.post-tags {
  margin-top: 20px;
  text-align: center;
}

.posts-expand .post-tags a {
  -webkit-box-shadow: 0 1px 3px rgba(0, 0, 0, .12), 0 1px 2px rgba(0, 0, 0, .24);
  -moz-box-shadow: 0 1px 3px rgba(0, 0, 0, .12), 0 1px 2px rgba(0, 0, 0, .24);
  box-shadow: 0 1px 3px rgba(0, 0, 0, .12), 0 1px 2px rgba(0, 0, 0, .24);
  font-family: 'Comic Sans MS', sans-serif;
  transition: .2s ease-out;
  padding: 3px 5px;
  margin: 5px;
  background: #f5f5f5;
  border-bottom: none;
  border-radius: 15px;

  &:hover {
    background: rgba(100, 154, 182, 0.902);
    color: #fff;
    -webkit-box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    -moz-box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  }
}

.post-body a:not(.btn):not(.hexo-douban-button):not(.hexo-douban-tab) {
  color: #5073b8;
  border-bottom: none;
  text-decoration: none;
}

.post-body a:not(.btn):not(.hexo-douban-button):not(.hexo-douban-tab):hover, .footer-inner a:hover {
  color: #5073b8;
  border-bottom: 1px solid #5073b8;
}

/* 有序图标设置 */
ol {
  padding-left: 0;
  font-size: 15px;
  margin-top: .4rem;
  list-style: none;
  counter-reset: ol-li;
}

.posts-expand .post-body ol li:before {
  display: block;
  float: left;
  width: 17px;
  height: 17px;
  line-height: 16px;
  margin: .4rem 12px 0 0;
  color: #fff;
  font-size: 15px;
  font-weight: 500;
  font-style: normal;
  background-color: #49b1f5;
  border-radius: 50%;
  text-align: center;
  content: counter(ol-li);
  counter-increment: ol-li;
}

/*相关文章推荐 pc样式设置*/

summary {
  width: 15%;
  outline: 0;
  cursor: pointer;
  margin-top: 15px;
  +mobile() { /*手机端*/
    width: 25%;
    font-size: 14px;
    margin-top: 10px;
  }
}

details {
  margin-left: 20px;
}

details .popular-posts {
  margin-top: 5px;
  margin-left: -22px;
  +mobile() {
    margin: 5px -26px;
  }
}

.popular-posts-header {
  margin-top: 45px;
  font-size: 20px;
  font-weight: 900;
  border-bottom: 1px solid #eee;
  +mobile() { /*手机端*/
    font-size: 18px;
    margin-top: 25px;
  }
}

.popular-posts-item {
  list-style: none
}

ul.popular-posts .popular-posts-item .popular-posts-title a:before {
  content: "🏷️ ";
}

ul.popular-posts .popular-posts-item .popular-posts-title a {
  border-bottom: 1px solid #999;

  &:hover {
    border-bottom: none;
  }
}

/*相关文章样式 end*/

//归档页年份样式
.posts-collapse .collection-year {
  font-size: 1.375em;
}

.posts-collapse .collection-year span {
  margin-left: -20px;
  width: 33%;
  padding: 0 20px 0 0;
  text-align: right;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 0 50px 50px 0;
  box-shadow: 0 8px 20px -8px rgba(0, 0, 0, 0.3);
  transition: all 1s cubic-bezier(0.17, 0.08, 0.04, 0.99);
}

.posts-collapse .collection-year span:hover {
  width: 80%;
  background: rgba(255, 255, 255, 0.5);
}

.category-all-page {
  margin-top: -55px;
}

.tag-cloud {
  margin-top: -55px;
}

.tag-cloud a {
  box-shadow: 0 1px 3px #6f42c1, 0 1px 2px #d9534f;
  padding: 2px 10px;
  margin: 8px;
  background: rgba(193, 66, 92, 0);
  border-bottom: none;
  border-radius: 20px;
}

.tag-cloud a {
  display: inline-block;
  margin: 10px;
}

.tag-cloud a:hover {
  color: #222 !important;
}

//画廊样式
.gallery-page {
  margin-top: 50px;
}

.img-list, .gallery-list {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: flex-start;
}

.gallery-item {
  margin-bottom: 50px;
}

.posts-expand .post-body .gallery-column a img {
  height: 250px;
  width: 300px;
  object-fit: cover;
}

img {
  border-style: none;
}

.gallery-item p {
  margin: 30px auto 10px;
  max-width: 50%;
  text-align: center;
  font-size: 15px;
  color: #222;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 7px;
  border: 1px solid #222;
  box-shadow: 0 8px 20px -8px rgba(0, 0, 0, 0.3);
}

//pc打赏
.share_reward {
  margin: 10px auto;
  width: 90%;
  text-align: center;
}

//打赏
#rewardButton {
  margin: 15px auto;
  cursor: pointer;
  border: 0;
  outline: 0;
  border-radius: 5px;
  padding: 0;
  letter-spacing: normal;
  text-transform: none;
  text-indent: 0;
  text-shadow: none;
}

#rewardButton span {
  padding: 8px 0 0px;
  display: inline-block;
  width: 80px;
  height: 30px;
  border-radius: 5px;
  color: #fff;
  font-weight: 400;
  font-style: normal;
  font-variant: normal;
  font-stretch: normal;
  font-size: 18px;
  font-family: "Microsoft Yahei";
  background: #f44336;
}

#QR {
  padding-top: 20px;
}

#QR a {
  border: 0;
}

#QR img {
  width: 180px;
  max-width: 100%;
  display: inline-block;
  margin: .8em 2em 0 2em;
}

#wechat:hover p {
  animation: roll .1s infinite linear;
  -webkit-animation: roll .1s infinite linear;
  -moz-animation: roll .1s infinite linear;
}

#alipay:hover p {
  animation: roll .1s infinite linear;
  -webkit-animation: roll .1s infinite linear;
  -moz-animation: roll .1s infinite linear;
}

#share {
  margin-top: 40px;
  text-align: center;
}

.post-nav-item .fa {
  font-size: 1em;
}

.post-nav-item a {
  color: #5073b8;
  font-weight: bold;
  font-size: 16px;
}

.post-nav-item a:hover {
  color: #a166ab;
  font-weight: bold;
  font-size: 16px;
}

/* 页码数字显示当前页码样式设置 */

.pagination .page-number.current {
  background: #49b1f5;
  border-radius: 50%;
}

/* 页码样式设置 */

.pagination .page-number {
  border: 3px solid #49b1f5;
  border-radius: 50%;
}

//手机适配
@media (max-width: 767px) {

  //本文阅读结束
  .read-over {
    text-align: center;
    margin-top: 20px;
    color: #ea103d91;
    font-size: 12px;
  }

  .posts-expand {
    margin-bottom: 0;
    padding: 0;
  }

  .gallery-item p {
    min-width: 75px;
    font-size: 12px;
  }

  .share_reward { //打赏
    font-size: 12px;
    padding: 10px 0;
    margin: 5px auto;
    width: 90%;
    text-align: center;
  }

  #rewardButton {
    margin: 15px auto;
  }

  #rewardButton span { //打赏
    display: inline-block;
    padding: 3px 0 0;
    width: 60px;
    height: 25px;

  }

  #QR {
    padding-top: 5px;
  }

  #QR a {
    border: 0;
  }

  #QR img {
    width: 80px;
    display: inline-block;
    margin: 0.8em 2em 0 2em;
  }

  .footer {
    color: #1b1b1b;
  }
}
