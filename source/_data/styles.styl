body {
  background: url(/images/bg-2.webp);
  background-size: cover;
  background-repeat: no-repeat;
  background-attachment: fixed;
  cursor: url(/images/normal.cur), auto;
}

/* 各类鼠标样式 begin*/

// p标签鼠标样式
p {
  cursor: url(/images/texto.cur), auto;
}

// a标签鼠标样式
a, .posts-expand .post-meta time {
  cursor: url(/images/ayuda.cur), auto;
}

// 打赏按钮鼠标样式
.reward-container button {
  cursor: url(/images/ayuda.cur), auto !important;
}

/* 各类鼠标样式 end*/

// 全局滚动条样式
::-webkit-scrollbar {
  width: 7px;
  height: 7px;
  background-color: #eee;
}

::-webkit-scrollbar-thumb {
  -webkit-box-shadow: inset 1px 1px 0 rgba(0, 0, 0, 0.1), inset 0 -1px 0 rgba(0, 0, 0, 0.07);
  background-clip: padding-box;
  background-color: #555;
  min-height: 40px;
  padding-top: 100px;
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background-color: #fc6423;
}

::-webkit-scrollbar-track {
  background-color: #eee;
}

// 解决sidebar圆角bug
.sidebar {
  box-shadow: none;
  background: none;
}

// 打字机效果
.site-description {
  display: inline;
}

span.typed-cursor {
  font-size: 0.85rem;
}

// 隐藏右下角底部的滑至顶部
.back-to-top.back-to-top-on {
  display none;
}

// 解决图片下方【】注解离图片太近
